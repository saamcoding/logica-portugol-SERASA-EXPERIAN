programa
{

	inteiro idade
	
	funcao inicio()
	{
		escreva("Olá, digite sua idade: ")
		leia(idade)

		limpa()

		se(idade >= 18){
			escreva("Você é maior de idade")}
		
		senao{
			escreva("Você é menor de idade")}
	}
}
